<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
    <LinearLayout

        android:id="@+id/cmarkertxt"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="중고 팝니다"
            android:textSize="30sp"
            android:textColor="#31B0B4"
            android:layout_gravity="center"
            android:gravity="center"

            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/cmarkerlayout"
        android:layout_below="@id/cmarkertxt"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:id="@+id/sellPic"
            />


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="25sp"
                android:id="@+id/customtxt"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/customcontent"
                />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/cmarkerlayout"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="#채팅을 하시려면 화면을 클릭하세요"
            />
    </LinearLayout>

    
    
    
</RelativeLayout>